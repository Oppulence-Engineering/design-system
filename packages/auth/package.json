{
  "name": "@oppulence/auth",
  "version": "0.1.1",
  "description": "Enterprise-grade authentication package built on WorkOS with custom UI components",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./nextjs": {
      "types": "./src/nextjs.ts",
      "import": "./src/nextjs.ts",
      "default": "./src/nextjs.ts"
    },
    "./trpc": {
      "types": "./src/trpc.ts",
      "import": "./src/trpc.ts",
      "default": "./src/trpc.ts"
    }
  },
  "files": [
    "src",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Oppulence-Engineering/design-system.git",
    "directory": "packages/auth"
  },
  "license": "MIT",
  "keywords": [
    "auth",
    "authentication",
    "workos",
    "react",
    "nextjs",
    "sso",
    "oauth",
    "enterprise"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@workos-inc/node": "^7.0.0",
    "jose": "^5.0.0",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@hookform/resolvers": "^3.0.0",
    "@oppulence/design-system": "^1.0.0",
    "@trpc/server": "^11.0.0",
    "next": ">=15.0.0",
    "react": ">=19.0.0",
    "react-hook-form": "^7.50.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "@trpc/server": {
      "optional": true
    },
    "@hookform/resolvers": {
      "optional": true
    },
    "react-hook-form": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.0.0",
    "@oppulence/design-system": "^1.0.0",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.0",
    "jsdom": "^25.0.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.50.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.0"
  }
}
